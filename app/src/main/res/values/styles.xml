<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="style_title">
        <item name="android:textSize">
            30sp
        </item>

        <item name="android:layout_width">
            match_parent
        </item>

        <item name="android:textStyle">
            bold
        </item>

        <item name="android:textColor">
            @color/textColorTitle
        </item>

        <item name="android:shadowColor">
            @color/shadowColorTitle
        </item>

        <item name="android:gravity">
            center|top
        </item>

        <item name="android:shadowDx">
            2
        </item>

        <item name="android:shadowDy">
            10
        </item>

        <item name="android:shadowRadius">
            12
        </item>

    </style>


    <style name="button_style_for_home_page">

        <item name="android:textColor">
            @color/buttonTextBlackColor
        </item>

    </style>

    <style name="style_edit_text_registration">
        <item name="android:textColorHint">
            #A0A3B6
        </item>
        <item name="android:textSize">
            24sp
        </item>
    </style>


    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/registration_edit_text_background</item>
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="background">@color/shadowColorTitle</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="background">@color/shadowColorTitle</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Widget.Material.DatePicker">
        <item name="background">@color/shadowColorTitle</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="style_horoscope_title">
        <item name="android:textColor">#EEE7FF</item>
        <item name="android:textSize">
            17sp
        </item>
    </style>

    <style name="style_title_button_pythagorean">
        <item name="android:textColor">
            @color/title_button_pythagorean
        </item>
        <item name="android:autoSizeStepGranularity">
            2dp
        </item>
        <item name="android:autoSizeTextType">
            uniform
        </item>
        <item name="autoSizeMinTextSize">
            5dp
        </item>
        <item name="autoSizeMaxTextSize">
            40dp
        </item>
        <item name="android:gravity">
            top|center
        </item>
        <item name="android:layout_marginTop">
            10dp
        </item>
        <item name="android:layout_marginLeft">
            2dp
        </item>
        <item name="android:layout_marginRight">
            2dp
        </item>
        <item name="android:layout_width">
            match_parent
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
    </style>

    <style name="style_title_button_pythagorean_number">
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColor">
            @color/title_button_pythagorean
        </item>
        <item name="android:autoSizeStepGranularity">
            1dp
        </item>
        <item name="android:autoSizeTextType">
            uniform
        </item>
        <item name="autoSizeMinTextSize">
            3dp
        </item>
        <item name="autoSizeMaxTextSize">
            20dp
        </item>
        <item name="android:layout_gravity">
            bottom
        </item>
        <item name="android:gravity">
            bottom|center
        </item>
        <item name="android:layout_marginBottom">
            10dp
        </item>
        <item name="android:layout_marginLeft">
            2dp
        </item>
        <item name="android:layout_marginRight">
            2dp
        </item>
        <item name="android:layout_width">
            match_parent
        </item>
        <item name="android:layout_height">
            20dp
        </item>
    </style>

    <style name="birthday_day">


        <item name="android:textColor">
            #F7FFFFFF
        </item>

        <item name="android:shadowColor">
            #40000000
        </item>

        <item name="android:shadowDx">
            0
        </item>

        <item name="android:shadowDy">
            10
        </item>

        <item name="android:shadowRadius">8
        </item>

    </style>

    <style name="date">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textColor">
            #E6FFFFFF
        </item>

        <item name="android:shadowColor">
            #3D4171
        </item>

        <item name="android:shadowDx">
            0
        </item>

        <item name="android:shadowDy">
            2
        </item>

        <item name="android:shadowRadius">
            4
        </item>

    </style>
</resources>

